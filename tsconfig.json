{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "include": ["./src"],
    "exclude": [
        "./node_modules/*",
        "./node_modules/@types/node/index.ts"
    ]
}